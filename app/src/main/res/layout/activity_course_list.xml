<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 학과 선택 텍스트 -->
    <TextView
        android:id="@+id/dl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학과를 선택하세요"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#3B63F1"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Spinner -->
    <Spinner
        android:id="@+id/dl_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/dl_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_spinner"/>

    <!-- 다음 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dl_submit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="400dp"
        android:text="확인"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#3B63F1"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/dl_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>