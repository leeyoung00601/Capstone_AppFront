<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="auth.LoginActivity"
    android:background="#ffffff">


    <TextView
        android:id="@+id/la_login_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="아이디를 입력해주세여!"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/la_login_image"

        tools:layout_editor_absoluteY="150dp" />

    <ImageView
        android:id="@+id/la_login_image"
        android:src="@drawable/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/la_login_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/la_login_area"/>

    <EditText
        android:id="@+id/la_login_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="아이디"
        app:layout_constraintTop_toBottomOf="@id/la_login_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/la_passs_word_area"
        />

    <EditText
        android:id="@+id/la_passs_word_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/la_login_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/la_login_btn"/>

    <Button
        android:id="@+id/la_login_btn"
        android:text="로그인"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"

        app:layout_constraintTop_toBottomOf="@id/la_passs_word_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/la_sign_up_btn"
        />

    h<Button
        android:id="@+id/la_sign_up_btn"
        android:text="회원가입"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"

        app:layout_constraintTop_toBottomOf="@id/la_login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>